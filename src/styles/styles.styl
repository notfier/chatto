/* Custom fonts */
@font-face
    font-family raleway
    src url( 'fonts/ralewayThin.ttf' )
@font-face
    font-family Artifika-Regular
    src url( 'fonts/Artifika-Regular.ttf' )
@font-face
    font-family Amaranth-Regular
    src url( 'fonts/Amaranth-Regular.otf' )

/* Styles */
body
    background #fff
    // padding 5% 0
    h1#logo
        margin 5px
        color green
        width 100px
        background-color #ccffff
    div.top-block
        background-color #ccffff
        // width 90%
        float right
    div.greetings
        margin-left 120px
        margin-top -40px
        float left
        width 300px
    div.logout
        float right
        margin-top -40px
    div.chat-block
        margin-top 10px
div.entry
    margin auto
    position relative
    width 50%
    height auto
    padding 10% 0
    vertical-align middle
    div.title
        color #5AB963
        font-family Amaranth-Regular
        margin-left auto
        margin-right auto
        & h2
            text-align center
    div.form
        div.inner-form
            display block
            & input
                border 0.5px solid #5AB963
                border-radius 7px
                -webkit-border-radius 10px
                -moz-border-radius 10px
                -moz-box-sizing border-box
                -webkit-box-sizing border-box
                box-sizing border-box
                display block
                font-size 20px
                font-family Amaranth-Regular
                margin 0 auto 5px auto
                text-align center
                width 70%
                height 40px
            & input#enterWorld
                background #f9ffe5
                color #5AB963
                cursor pointer
            & input#enterWorld:active
                background #5AB963
                color #f9ffe5
                cursor pointer
                transition-delay 0.01s

/* chat */
div#root div.users
    width 19%
    float left
    border 1px solid #ccffff
    ul
        padding-left 0px
        li
            list-style-type none
            height 55px
            a
                color #001a14
                & :before /* strange fix */
                    content ""
                    display inline-block
                    vertical-align middle
                    height 100%
                div
                    display inline-block
                    vertical-align middle
                    height 100%
                div:last-child
                    float right
                    vertical-align top !important
                img.user-photo
                    border-radius 50%
                    padding-left 4px
                    width 48px
                    height auto
                    vertical-align middle
                div.user-name span
                    padding-left 10px
                div.user-time span
                    font-size 10px
                    padding-right 4px
        & :hover
            background-color #e5ffff
            cursor pointer
div#root div.messages
    width 80%
    float right

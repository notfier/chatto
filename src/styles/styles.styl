@font-face
    font-family raleway
    src url( 'fonts/ralewayThin.ttf' )
body
    padding 5% 0;
    font-family raleway
div.entry
    margin auto
    position relative
    width 50%
    height auto
    padding 10% 0
    vertical-align middle
    div.title
        margin-left auto
        margin-right auto
        color #5AB963
        & h2
            text-align center
    div.form
        div.inner-form
            display block
            & input
                border 1px solid #669999
                -moz-box-sizing border-box
                -webkit-box-sizing border-box
                box-sizing border-box
                display block
                margin 0 auto 5px auto
                width 70%
                height 50px